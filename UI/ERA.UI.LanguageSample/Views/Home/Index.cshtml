@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="~/Scripts/plugins/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/lib/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("#open").on("click", function () {
                $.ajax({
                    url: "/Home/OpenModal/?id=" + $("#LanguageCode").val(),
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        $("#LinkTest").html(data.Message);
                        $("#LoginModel").modal();
                    }
                });
            });
        });
    </script>
}
<div class="container">
    <a href="~/Home/Index/?id=zh-cn">@T("Chinese")</a>  <a href="~/Home/Index/?id=en-us">@T("English")</a>
    <input type="hidden" id="LanguageCode" value="@ViewBag.LanguageCode" />
    <div>
        <h1>@T("LanguageTest")</h1>
        <a id="open" href="javascript:void(0);" class="btn btn-primary btn-large">@T("Login")</a>
    </div>
    <div id="LoginModel" aria-hidden="true" role="basic" tabindex="-1" class="modal fade bs-modal-sm" style="display:none;">
        <div class="modal-dialog modal-sm">
	        <div class="modal-content">
		        <div class="modal-header">
			        <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
			        <h4 class="modal-title">@T("Login")</h4>
		        </div>
		        <div class="modal-body">
                    <form id="LoginModelForm" role="form" class="form-horizontal">
			            <div class="form-group">
                            <div class="col-md-12">
                                <input class="form-control" id="email" type="text" name="email" placeholder="@T("InputAccount")" />            
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input class="form-control" id="password" type="password" name="password" placeholder="@T("InputPassword")" />          
                            </div>
                        </div>
                        <div id="LinkTest" class="form-group">

                        </div>
                    </form>
		        </div>
		        <div class="modal-footer">
			        <button data-dismiss="modal" class="btn default" type="button">@T("Close")</button>
			        <button id="BtnLoginModel" class="btn red" type="button">@T("Login")</button>
		        </div>
	        </div>
        </div>
    </div>   
</div>

